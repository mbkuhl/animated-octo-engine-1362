<h2><%= @movie.title %></h2>

<%= "Year of Creation: #{@movie.creation_year}" %> <br>
<%= "Genre: #{@movie.genre}" %> <br>
  <br>
<h4>Actors, Youngest to Oldest:</h4>
<% @movie.actors_youngest_to_oldest.each do |actor| %>
  <%= actor %>
<% end %>
<br><br>
<%= "Average age of actors: #{@movie.average_age_of_actors}" %>
<br><br>
<%= form_with url: "/movies/#{@movie.id}", method: :patch, local: :true do |f| %>
  <%= f.text_field :add_actor %>
  <%= f.submit "Add actor" %>
<% end %>
